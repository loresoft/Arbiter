@using Blazored.Modal
@using Blazored.Modal.Services

<div>
    <p>@Message</p>

    <div class="pt-1 text-end">
        <button @onclick="Close" class="btn @ActionClass me-1">@ActionName</button>
        <button @onclick="Cancel" class="btn btn-secondary">@CancelName</button>
    </div>
</div>

@code {
    [CascadingParameter]
    public required BlazoredModalInstance Modal { get; set; }

    [Parameter]
    public required string Message { get; set; }

    [Parameter]
    public string ActionClass { get; set; } = "btn-danger";

    [Parameter]
    public string ActionName { get; set; } = "Delete";

    [Parameter]
    public string CancelName { get; set; } = "Cancel";


    private async Task Close() => await Modal.CloseAsync(ModalResult.Ok(true));

    private async Task Cancel() => await Modal.CancelAsync();

}
